all: BERIM3T BERIMAT 

BERIM3T: BERIM3.o BERIM3_T.o GEOM3D.o CGLS.o H3LC.o
	gfortran -o BERIM3T BERIM3.o BERIM3_T.o GEOM3D.o H3LC.o CGLS.o

BERIMAT: BERIMA.o BERIMA_T.o GEOM2D.o GEOM3D.o CGLS.o H3ALC.o
	gfortran -o BERIMAT BERIMA.o BERIMA_T.o GEOM2D.o GEOM3D.o H3ALC.o CGLS.o

BERIM3.o: BERIM3.FOR
	gfortran -c BERIM3.FOR

BERIMA.o: BERIMA.FOR
	gfortran -c BERIMA.FOR

BERIM3_T.o: BERIM3_T.FOR
	gfortran -c BERIM3_T.FOR

BERIMA_T.o: BERIMA_T.FOR
	gfortran -c BERIMA_T.FOR

GEOM2D.o: ../SHARED/GEOM2D.FOR
	gfortran -c ../SHARED/GEOM2D.FOR

GEOM3D.o: ../SHARED/GEOM3D.FOR
	gfortran -c ../SHARED/GEOM3D.FOR

H3LC.o: ../SHARED/H3LC.FOR
	gfortran -c ../SHARED/H3LC.FOR

H3ALC.o: ../SHARED/H3ALC.FOR
	gfortran -c ../SHARED/H3ALC.FOR

CGLS.o: ../SHARED/CGLS.FOR
	gfortran -c ../SHARED/CGLS.FOR

clean:
	rm *.o BERIM3T BERIM3.OUT BERIMAT BERIMA.OUT *~

