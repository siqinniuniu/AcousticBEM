all: RIM3T1 RIM3T2 RIM3T3

RIM3T1: RIM3.o RIM3T1.o  GEOM3D.o CGLS.o H3LC.o
	gfortran -o RIM3T1 RIM3.o RIM3T1.o GEOM3D.o H3LC.o CGLS.o

RIM3T2: RIM3.o RIM3T2.o  GEOM3D.o CGLS.o H3LC.o
	gfortran -o RIM3T2 RIM3.o RIM3T2.o GEOM3D.o H3LC.o CGLS.o

RIM3T3: RIM3.o RIM3T3.o  GEOM3D.o CGLS.o H3LC.o
	gfortran -o RIM3T3 RIM3.o RIM3T3.o GEOM3D.o H3LC.o CGLS.o


RIM3.o: RIM3.FOR
	gfortran -c RIM3.FOR

RIM3T1.o: RIM3T1.FOR
	gfortran -c RIM3T1.FOR

RIM3T2.o: RIM3T2.FOR
	gfortran -c RIM3T2.FOR

RIM3T3.o: RIM3T3.FOR
	gfortran -c RIM3T3.FOR

GEOM3D.o: ../SHARED/GEOM3D.FOR
	gfortran -c ../SHARED/GEOM3D.FOR

H3LC.o: ../SHARED/H3LC.FOR
	gfortran -c ../SHARED/H3LC.FOR

CGLS.o: ../SHARED/CGLS.FOR
	gfortran -c ../SHARED/CGLS.FOR

clean:
	rm *.o RIM3T1 RIM3T1.OUT RIM3T2 RIM3T2.OUT RIM3T3 RIM3T3.OUT *~

